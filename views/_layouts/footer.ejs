<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Корзина</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
                <%var totalcost = 0.0%>
                <%if (typeof cart =="undefined") {%> 
                    <h5>Пусто</h5>
                <% } else {%>
                    <% cart.forEach(function(p){ %>
                        <div id="object" class="modal-body"> 
                        <%totalcost += parseFloat(p.price) * parseFloat(p.qty) %>
                        <%console.log(totalcost)%>
                        <div>
                        <div class="line">  
                             <span id="name"><%=p.title%></span>
                             <span id="qty"><%=p.title%></span>
                            <span id="cost">$<%= p.price %></span>
                         </div>	
                        </div>
                    </div>
                    <hr size=3px width=500px >
                <% })%>
                <% } %>
           <p id="total">Итог $<%=totalcost%></p>
            <div class="modal-footer">
                <button class="btn btn-outline-secondary btn-warning" id="BuyCart">Оплатить</button>
                <button class="btn btn-outline-secondary btn-warning" id="DeleteCart"><img src="images/icon.svg"></button>
            </div>
        </div>
    </div>
</div>
</div>

