    <div class="footer-section">
        <div class="footer-headline">
            <h3 class="headline-h3">shop</h3>
        </div>
        <nav class="nav-links">
            <ul class="menu">
                <li class="menu-item"><a href="/home" class="menu-link">Home</a></li>
                <li class="menu-item"><a href="/category" class="menu-link">categories</a></li>
                <li class="menu-item"><a href="/feedbacks" class="menu-link">feedback</a></li>
                <li class="menu-item"><a href="/about-us" class="menu-link">about us</a></li>
